rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection: Read for all, write only for authenticated users
    match /users/{userId} {
      allow read: if true; // ゲストでも閲覧可能
      allow write: if request.auth != null; // ログインが必要

      // Friends subcollection
      match /friends/{friendId} {
        allow read: if true;
        allow write: if request.auth != null;
      }

      // Activities subcollection
      match /activities/{activityId} {
        allow read: if true; // ゲストでも閲覧可能
        allow write: if request.auth != null; // ログインが必要
      }
    }

    // Posts collection: Read for all, write for all (temporary for development)
    match /posts/{postId} {
      allow read: if true; // ゲストでも閲覧可能
      allow create, update, delete: if true; // 開発中は全ユーザーが投稿可能

      // Likes subcollection
      match /likes/{likeId} {
        allow read: if true;
        allow create, delete: if true;
      }
    }

    // Profiles collection: Read for all, write only for authenticated users
    match /profiles/{userId} {
      allow read: if true; // ゲストでも閲覧可能
      allow write: if request.auth != null && request.auth.uid == userId; // 自分のプロフィールのみ編集可能
    }

    // Friend requests collection
    match /friendRequests/{requestId} {
      allow read, create, update, delete: if request.auth != null;
    }
  }
}